---
import '../styles/global.css'

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body class="antialiased">
    <slot />
  </body>
</html>

<style is:global>
  html, body {
    margin: 0;
    padding: 0;
    overflow: hidden;
  }
</style>
